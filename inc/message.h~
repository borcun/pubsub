/**
 * @file msg.h
 * @brief
 */

#ifndef MSG_H
#define MSG_H

#include <iostream>
#include <string>

class Topic {
 public:
  explicit Topic(const std::string &name);
  Topic(const Topic &topic);
  Topic(const Topic &&topic);
  virtual ~Topic();
  void setName(const std::string &name);
  void setPayload(const std::string &payload);
  std::string getName(void) const;
  std::string getTime(void) const;
  std::string getPayload(void) const;
  
 private:
  std::string m_name;
  std::string m_time;
  std::string m_payload;
};

#endif
