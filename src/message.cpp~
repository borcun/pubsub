#include "topic.h"

Topic::Topic(const std::string &name) : m_name(name) {
  m_time = "0"; // @todo get time
  m_payload.clear();
}

Topic::Topic(const Topic &topic) {
  m_name = topic.m_name;
  m_time = topic.m_time;
  m_payload = topic.m_payload;
}

Topic::Topic(const Topic &&topic) {
  m_name = std::move(topic.m_name);
  m_time = std::move(topic.m_time);
  m_payload = std::move(topic.m_payload);
}

Topic::~Topic() {
  m_name.clear();
  m_time.clear();
  m_payload.clear();
}

void Topic::setName(const std::string &name) {
  m_name = name;
  return;
}

void Topic::setPayload(const std::string &payload) {
  m_payload = payload;
  return;
}

std::string Topic::getName(void) const {
  return m_name;
}

std::string Topic::getTime(void) const {
  return m_time;
}

std::string Topic::getPayload(void) const {
  return m_payload;
}
